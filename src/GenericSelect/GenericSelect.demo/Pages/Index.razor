@page "/"
@using GenericSelect.Components

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<GenericSelect Options="options" @bind-Value="value"></GenericSelect>
<div>@value</div>

@code {
    private int value { get; set; }
    private IEnumerable<GenericOption<int>> options = new List<GenericOption<int>>
    {
        new GenericOption<int>{Key = 0, Value = "apple"},
        new GenericOption<int>{Key = 1, Value = "orane"},
        new GenericOption<int>{Key = 2, Value = "cherry"},
    };
}
